void setup() 
{ 
  Serial.begin(9600); // Initialize serial port 
} 
  
void loop() 
{ 
  String input = getInput();

  if(input != "")
  {
      Serial.println(getInput());
  }
} 

String getInput()
{
  String content = ""; 
  char character; 
  
  while(Serial.available()) 
  { 
    character = Serial.read(); 
    content.concat(character); 
    delay (10); 
  } 
  
  if (content != "") 
  { 
    return content;
  } 
}
